{% schema %}
{
  "name": "Product Comparison Table",
  "settings": [
    {
      "type": "header",
      "content": "Product Comparison Table"
    },
    {
      "type": "text",
      "label": "Table Heading",
      "id": "table_heading",
      "default": "Why Choose The Skin Labo Cream?"
    },
    {
      "type": "textarea",
      "label": "Table Subtitle",
      "id": "table_subtitle",
      "default": "One Cream. Total Skin Confidence."
    },
    {
      "type": "range",
      "label": "Icon Size for Skin Labo Cream",
      "id": "icon_size_labo",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 30
    },
    {
      "type": "range",
      "label": "Icon Size for Other Brands",
      "id": "icon_size_other",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 30
    },
    {
      "type": "range",
      "label": "Padding Top for Comparison Section",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "label": "Padding Bottom for Comparison Section",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "color",
      "label": "Tick Icon Color for Skin Labo Cream",
      "id": "tick_labo_color",
      "default": "#34b700"
    },
    {
      "type": "color",
      "label": "Tick Icon Background Color for Skin Labo Cream",
      "id": "tick_labo_bg_color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "label": "Cross Icon Color for Skin Labo Cream",
      "id": "cross_labo_color",
      "default": "#d32f2f"
    },
    {
      "type": "color",
      "label": "Cross Icon Background Color for Skin Labo Cream",
      "id": "cross_labo_bg_color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "label": "Tick Icon Color for Other Brands",
      "id": "tick_other_color",
      "default": "#34b700"
    },
    {
      "type": "color",
      "label": "Tick Icon Background Color for Other Brands",
      "id": "tick_other_bg_color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "label": "Cross Icon Color for Other Brands",
      "id": "cross_other_color",
      "default": "#d32f2f"
    },
    {
      "type": "color",
      "label": "Cross Icon Background Color for Other Brands",
      "id": "cross_other_bg_color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "label": "Border Width for Skin Labo Icons",
      "id": "border_width_labo",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 2
    },
    {
      "type": "color",
      "label": "Border Color for Skin Labo Icons",
      "id": "border_color_labo",
      "default": "#000000"
    },
    {
      "type": "range",
      "label": "Border Width for Other Brands Icons",
      "id": "border_width_other",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 2
    },
    {
      "type": "color",
      "label": "Border Color for Other Brands Icons",
      "id": "border_color_other",
      "default": "#000000"
    },
    {
      "type": "text",
      "label": "Column",
      "id": "skin_labo_col_custom_label",
      "default": "fWrap"
    },
    {
      "type": "text",
      "label": "Column2",
      "id": "skin_labo_col_custom_label2",
      "default": "Relie"
    },
    {
      "type": "select",
      "label": "Container Type",
      "id": "container_type",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "full_width",
          "label": "Full Width"
        },
        {
          "value": "use_container_box",
          "label": "Use Container Box"
        }
      ],
      "default": "default"
    }
  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "label": "Feature Name",
          "id": "feature_name",
          "default": "Enter feature name"
        },
        {
          "type": "checkbox",
          "label": "Tick Circle for Skin Labo Cream (SVG)",
          "id": "tick_labo_svg",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Cross Circle for Skin Labo Cream (SVG)",
          "id": "cross_labo_svg",
          "default": false
        },
        {
          "type": "checkbox",
          "label": "Tick Circle for Other Brands (SVG)",
          "id": "tick_other_svg",
          "default": false
        },
        {
          "type": "checkbox",
          "label": "Cross Circle for Other Brands (SVG)",
          "id": "cross_other_svg",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "compareTable",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="pro_compare page-width sale_compare_section section" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container" 
       style="max-width: {% if section.settings.container_type == 'full_width' %}100%;{% elsif section.settings.container_type == 'use_container_box' %}{{ section.settings.container_width }}px{% else %}1200px{% endif %}; padding-top: {{ section.settings.container_padding_top }}px; padding-bottom: {{ section.settings.container_padding_bottom }}px;">
    <div class="compare-box">
      <div class="com_left-side">
        <div class="com_left-side_box">
          <h2 class="com_heading">{{ section.settings.table_heading }}</h2>
          <div class="com_text">
            <p>{{ section.settings.table_subtitle }}</p>
          </div>
        </div>
      </div>

      <div class="table_content">
        <div class="top_table_content">
          <table>
            <thead>
              <tr>
                <th class="left_top_content">
                  <div class="feature-col"></div>
                </th>
                <th class="right_content right_contentMiddle">
                  <div class="skin-labo-col">{{ section.settings.skin_labo_col_custom_label }}</div>
                </th>
                <th class="right_content">
                  <div class="other-brands-col">{{ section.settings.skin_labo_col_custom_label2 }}</div>
                </th>
              </tr>
            </thead>
            <tbody>
              {% for block in section.blocks %}
              <tr class="tablelooprow row-{{ forloop.index }}">
                <td class="tabletile">
                  <div class="feature-item">{{ block.settings.feature_name }}</div>
                </td>
                <td class="bleame">
                  <div class="skin-labo-item">
                    {% if block.settings.tick_labo_svg %}
                      <svg class="tick-icon" width="{{ section.settings.icon_size_labo }}" height="{{ section.settings.icon_size_labo }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" fill="{{ section.settings.tick_labo_bg_color }}" stroke="{{ section.settings.border_color_labo }}" stroke-width="{{ section.settings.border_width_labo }}" />
                        <path fill="none" stroke="{{ section.settings.tick_labo_color }}" stroke-width="2" d="M8 12l3 3 6-6" />
                      </svg>
                    {% elsif block.settings.cross_labo_svg %}
                      <svg class="cross-icon" width="{{ section.settings.icon_size_labo }}" height="{{ section.settings.icon_size_labo }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" fill="{{ section.settings.cross_labo_bg_color }}" stroke="{{ section.settings.border_color_labo }}" stroke-width="{{ section.settings.border_width_labo }}" />
                        <path fill="none" stroke="{{ section.settings.cross_labo_color }}" stroke-width="2" d="M8 8l8 8M16 8l-8 8" />
                      </svg>
                    {% endif %}
                  </div>
                </td>
                <td class="bleame2">
                  <div class="other-brands-item">
                    {% if block.settings.tick_other_svg %}
                      <svg class="tick-icon" width="{{ section.settings.icon_size_other }}" height="{{ section.settings.icon_size_other }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" fill="{{ section.settings.tick_other_bg_color }}" stroke="{{ section.settings.border_color_other }}" stroke-width="{{ section.settings.border_width_other }}" />
                        <path fill="none" stroke="{{ section.settings.tick_other_color }}" stroke-width="2" d="M8 12l3 3 6-6" />
                      </svg>
                    {% elsif block.settings.cross_other_svg %}
                      <svg class="cross-icon" width="{{ section.settings.icon_size_other }}" height="{{ section.settings.icon_size_other }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" fill="{{ section.settings.cross_other_bg_color }}" stroke="{{ section.settings.border_color_other }}" stroke-width="{{ section.settings.border_width_other }}" />
                        <path fill="none" stroke="{{ section.settings.cross_other_color }}" stroke-width="2" d="M8 8l8 8M16 8l-8 8" />
                      </svg>
                    {% endif %}
                  </div>
                </td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .tick-icon, .cross-icon {
    transition: fill 0.3s ease, stroke 0.3s ease;
  }

  .tick-icon:hover {
    fill: #28a745; /* Change color on hover */
  }

  .cross-icon:hover {
    fill: #e53935; /* Change color on hover */
  }

  .skin-labo-item, .other-brands-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .skin-labo-item svg, .other-brands-item svg {
    max-width: 100%;
    height: auto;
  }

  .right_contentMiddle .skin-labo-col {
    color: #fff;
  }

  .pro_compare {
    width: 100%;
  }

  tr.tablelooprow.row-6 td.bleame {
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
  }

  .right_contentMiddle {
    background: #000;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }

  .compare-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .feature-item {
    justify-content: start;
    text-transform: capitalize;
  }



  .com_left-side_box {
    margin-bottom: 20px;
  }

  .com_heading {
    font-size: 2rem;
    color: #333;
    margin-bottom: 10px;
  }

  .com_text p {
    font-size: 1.2rem;
    color: #666;
  }

  .table_content {
    padding: 20px;
    border-radius: 8px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  table th, table td {
    padding: 12px;
    text-align: center;
  }

  table th {
    color: #000;
  }

  table .tabletile {
    text-align: left;
  }

  table .tablelooprow {
  }

  table .row-1 {
    /* background-color: #f4f4f4; */
  }

  table .row-2 {
    /* background-color: #e9e9e9; */
  }

  .feature-col, .skin-labo-col, .other-brands-col {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .skin-labo-item, .other-brands-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .feature-item {
    padding: 5px 10px;
    margin: 5px;
    border-radius: 4px;
  }

  .skin-labo-item, .other-brands-item {
    padding: 10px;
    border-radius: 5px;
  }
table .tabletile, td.bleame2 {
    border-bottom: 2px solid #e7e7e7;
}

  tr.tablelooprow.row-6{
  .tabletile, td.bleame2 {
    border-bottom: none;
}   
  }
  .bleame2 {
    background: none;
    border: none;
  }

  table {
    background: transparent;
  }
tr.tablelooprow.row-6 td.bleame {
    border-bottom: 2px solid #ebe8e8;
}
  .bleame {

    border-left: 2px solid #ebe8e8;
    border-right: 2px solid #ebe8e8;
  }

  .skin-labo-item img, .other-brands-item img {
    display: inline-block;
    max-width: 100%;
    height: auto;
  }

@media (min-width: 768px){
    .com_left-side {
    width: 50%;
    max-width: 100%;
  }
}
  
@media (max-width:767.99px){
      .com_left-side {
    width: 100%;
    max-width: 100%;
  }
  h2.com_heading {
    text-align: center;
}
}
  
</style>
