        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Advanced Announcement Bar",
      "blocks": [{ "type": "announcement" }, { "type": "announcement" }]
    }
  ]
}
